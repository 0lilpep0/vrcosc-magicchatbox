                                </Trigger.ExitActions>
                                <Setter TargetName="button" Property="Background" Value="#7D7397"></Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Trigger.ExitActions>
                                    <RemoveStoryboard BeginStoryboardName="rightt"></RemoveStoryboard>
